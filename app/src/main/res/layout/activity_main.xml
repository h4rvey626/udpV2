<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context=".MainActivity">

    <!-- 连接状态栏 -->
    <LinearLayout
        android:id="@+id/connectPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF3B30"
            android:text="CONNECT"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="630dp"
        android:layout_marginTop="0dp"
        android:background="#33FFFFFF"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="模式: STABILIZE"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textAltitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高度: 0.0 m"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="速度: 0.0 m/s"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="航向: 0°"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置: X:0.0m Y:0.0m"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textAttitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姿态: R:0.0° P:0.0° Y:0.0°"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 摄像头视频流显示 -->
    <com.example.controller.CameraStreamView
        android:id="@+id/cameraStreamView"
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 左侧十字/油门偏航按钮区域 -->
    <FrameLayout
        android:id="@+id/joystickLeftContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dataPanel"
        app:layout_constraintVertical_bias="0.654">

        <Button
            android:id="@+id/btnUp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="↑"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnDown"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="↓"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="2dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="2dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="→"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="@null" />
    </FrameLayout>

    <!-- 右侧俯仰/横滚摇杆 -->
    <FrameLayout
        android:id="@+id/joystickRightContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/dataPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <View
            android:id="@+id/joystickRightBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/joystick_background" />

        <View
            android:id="@+id/joystickRightThumb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/joystick_thumb" />
    </FrameLayout>

    <!-- 底部按钮栏 -->
    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnTAKEOFF"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#34C759"
            android:text="TAKEOFF"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnGuided"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#007AFF"
            android:text="GUIDE"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLand"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#FF3B30"
            android:text="LAND"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnKill"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#FF9500"
            android:text="BRAKE"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btnArm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ARM"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>